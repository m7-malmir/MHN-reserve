// toggle for each grid
$(' .pmdynaform-grid-new').click(function(){
   $(this).parent().find(".pmdynaform-grid-fields").toggleClass("main");
   $(this).parent().find(".pmdynaform-grid-newitem").toggleClass("main");
   $(this).parent().find(".pmdynaform-grid").toggleClass("main");
	$(this).parent().find(".pmdynaform-grid-new ").toggleClass("active");		
});
//end toggle


